<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:background="@color/app_color">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="设置"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/font_color"
            ></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="closeClick"
           android:padding="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:src="@drawable/vector_close"></ImageView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_setting_item">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:text="头像"></TextView>

            <org.ar.anyhouse.weight.SquircleImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_50"
             ></org.ar.anyhouse.weight.SquircleImageView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/list_line_color"></View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:onClick="modifyNameClick"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:text="昵称"></TextView>

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_8"
                android:drawableRight="@drawable/vector_setting_arrow_r"
                android:layout_alignParentRight="true"
               ></TextView>
        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_setting_item">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:textColor="@color/font_color"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:onClick="privacyCLick"
            android:drawableRight="@drawable/vector_setting_arrow_up"
            android:text="隐私条例"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#DCDDDE"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:textColor="@color/font_color"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:onClick="statementClick"
            android:drawableRight="@drawable/vector_setting_arrow_up"
            android:text="免责声明"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#DCDDDE"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:textColor="@color/font_color"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:onClick="registerClick"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/vector_setting_arrow_up"
            android:text="注册开发者账号"></TextView>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_setting_item">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:text="发版时间"></TextView>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#DCDDDE"></View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:text="SDK 版本"></TextView>

            <TextView
                android:id="@+id/tv_sdk_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"></TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#DCDDDE"></View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:text="软件版本"></TextView>

            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"></TextView>
        </RelativeLayout>


    </LinearLayout>






</LinearLayout>